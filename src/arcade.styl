
@import url("https://fonts.googleapis.com/css?family=Source+Code+Pro:500,600");

body
  background black
/* Styles that I like in ACE and Sublime */
.CodeMirror
  font-family: 'Source Code Pro', 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', monospace;
  font-size: 16px;
  line-height: 1.3em;
  cursor: text;
  height auto

.cm-matchhighlight:not(.CodeMirror-selectedtext)
  outline: 1px solid #bbb;

.CodeMirror-selected
  background-color: rgba(86, 86, 86, 0.7) !important;

.CodeMirror-focused div.CodeMirror-cursor
  /* Whatever your cursor color is: */
  border-right: 1px solid white;
  border-left: 1px solid #fffc;

.cm-tab
  background-position: right;
  background-repeat: no-repeat;
  background-image: url("data:image/png;base64,");
  opacity 0

.CodeMirror-selectedtext .cm-tab
  opacity .5

.CodeMirror-gutters
  cursor: default;